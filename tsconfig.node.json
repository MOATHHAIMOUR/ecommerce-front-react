{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "dom"], // Include 'dom' to access browser APIs like 'document'
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* JSX support */
    "jsx": "react-jsx", // If you're using React 17 or newer; use "react" for older versions

    /* Absolute path imports */
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@routes/*": ["src/routes/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@util/*": ["src/util/*"],
      "@services/*": ["src/services/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "vite.config.ts"], // Include all files in the 'src' folder and config file
  "exclude": ["node_modules", "dist"] // Exclude build folders
}
